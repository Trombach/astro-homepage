    "@tailwindcss/container-queries": "^0.1.1",
    "astro": "^5.12.0",
    "astro-og-canvas": "^0.7.0",
    "astro-starlight-remark-asides": "^0.0.7",
    "beasties": "^0.3.5",
    "canvaskit-wasm": "^0.40.0",
    "clsx": "^2.1.1",
    "linkedom": "^0.18.11",
    "radash": "^12.1.1",
    "remark-directive": "^4.0.0",
    "remark-github": "^12.0.0",
    "resend": "^4.7.0",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.3",
    "svelte": "^5.37.1",
