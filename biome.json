{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": { "ignore": ["dist", ".vercel", "*.d.ts"] },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "attributes": ["class:list"],
            "functions": ["clsx"]
          }
        }
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
