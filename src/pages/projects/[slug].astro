---
import { getImage } from "astro:assets";
import { getCollection } from "astro:content";
import Footer from "@components/Footer/Footer.astro";
import ProjectPage from "@components/ProjectPage/ProjectPage.astro";
import SEO from "@components/SEO.astro";
import Layout from "@layouts/Layout.astro";
import type { GetImageResult } from "astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const {
  entry: {
    slug,
    data: { title, description, ...extraProps },
    render,
  },
} = Astro.props;

const { Content, headings } = await render();
let img: GetImageResult | undefined;
if (extraProps.cover.image) {
  img = await getImage({
    src: extraProps.cover.image,
    alt: extraProps.cover.alt,
    widths: [240, 480, 850],
    loading: "eager",
    sizes:
      "(max-width: 360px) 240px, (max-width: 480px) 480px, (min-width: 850px) 850px",
  });
}
---

<Layout {title} {description}>
  <SEO
    slot="seo"
    {title}
    {description}
    imageURL={new URL(`og/${slug}.png`, Astro.url.origin)}
  />

  {
    img && (
      <link
        slot="preload"
        rel="preload"
        as="image"
        href={img.src}
        imagesrcset={img.srcSet.attribute}
        imagesizes={img.attributes.sizes}
      />
    )
  }

  <ProjectPage {title} {headings} {description} {...extraProps}>
    <Content />
  </ProjectPage>

  <Footer slot="footer" />
</Layout>

<script>
  function scrollTo(hash: string) {
    if (hash === "") return;

    if (hash.startsWith("#")) {
      hash = hash.replace("#", "");
    }

    document.getElementById(hash)?.scrollIntoView({ behavior: "smooth" });
  }

  scrollTo(window.location.hash);

  document.addEventListener("astro:page-load", () =>
    scrollTo(window.location.hash),
  );
</script>
