---
import { getEntry } from "astro:content";
import Waves from "./Waves.astro";

const { data } = await getEntry("home", "welcome");
---

<section
  id="hero"
  class="relative flex h-screen-less-header flex-col items-end"
>
  <p
    class="absolute left-52 top-1/3 w-[600px] text-center font-mono text-5xl leading-relaxed"
    transition:animate="slide"
  >
    {data.block1}
    <span class="text-primary">{data.name}</span>
    {data.block2}
  </p>
  <Waves />
</section>
