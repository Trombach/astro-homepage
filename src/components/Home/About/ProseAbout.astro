---
type Props = {
  class?: string;
};

const { class: className } = Astro.props;
---

<div
  class:list={[
    "text-lg md:text-xl",
    "[&>a]:font-medium [&>a]:underline",
    "[&>p]:text-justify [&>p]:leading-7 md:[&>p]:leading-9 [&>*:not(:first-child)]:mt-6",
    "motion-safe:*:timeline-slide-in-bottom",
    className,
  ]}
>
  <slot />
</div>
