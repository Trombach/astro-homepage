---
/* global ImageMetadata */

import DefaultImage from "@images/heroicons--user-circle.svg";
import { Image } from "astro:assets";

type Props = {
  image?: ImageMetadata | undefined;
  class?: string | undefined;
};

const { image, class: className } = Astro.props;
---

<Image
  src={image || DefaultImage}
  transition:name="avatar"
  alt="Lukas"
  widths={[96, 128, 256]}
  loading="eager"
  sizes={`(max-width: 360px) 96px, (max-width: 480px) 128px, 256px`}
  class:list={["rounded-full border-4 border-card lg:border-8", className]}
/>
