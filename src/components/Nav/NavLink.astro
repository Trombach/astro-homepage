---
type Props = {
  title: string;
  href: string;
};

const { title, href }: Props = Astro.props;
const path = new URL(Astro.request.url).pathname.slice(1);
---

<a
  {href}
  class:list={[
    "relative inline-block h-auto tracking-wider hover:text-gray-50",
    { "text-gray-400": path !== href },
  ]}
>
  {
    path === href ? (
      <span
        transition:animate="slide"
        class:list={[
          "absolute -right-4 top-[calc(50%-(theme(spacing.2)/2))] h-2 w-2 rounded-full bg-current",
          "lg:left-[calc(50%-(theme(spacing.2)/2))] lg:top-7",
        ]}
      />
    ) : null
  }
  {title}
</a>
