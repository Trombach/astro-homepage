---
import GithubLogo from "icons:astro/logos/github-icon";
import Graph from "../Graph/Graph.svelte";
import Copyright from "./Copyright.astro";
---

<footer
  class:list={[
    "relative isolate flex items-end justify-end min-h-28 sm:min-h-40 text-secondary-foreground",
    "after:[mask:linear-gradient(3deg,black_0%_calc(50%-1px),transparent_50%_100%)]",
    "after:bg-secondary after:absolute after:inset-0 after:bottom-1/2 after:-z-10",
    "before:bg-secondary before:absolute before:inset-0 before:top-1/2 before:-z-10",
  ]}
>
  <div class="p-5">
    <div
      class="max-w-screen-xl mx-auto flex justify-end items-center gap-3 md:gap-5"
    >
      <a
        transition:persist="footer-logo"
        href="/projects/homepage#the-logo"
        title="What's this?"
        class:list={[
          "absolute z-10 flex justify-center left-[5%] lg:left-[10%] -top-5 rounded-full border-4 border-secondary bg-background size-20 sm:size-28 lg:size-36",
          "transition-transform hover:scale-105",
        ]}
      >
        <Graph client:visible />
        <span class="sr-only">Logo Info</span>
      </a>

      <Copyright />
      <a href="https://astro.build" class="md:hidden">
        <img
          src="https://astro.badg.es/v2/built-with-astro/tiny.svg"
          alt="Built with Astro"
          width="120"
          height="20"
        />
      </a>
      <a href="https://astro.build" class="hidden md:block">
        <img
          src="https://astro.badg.es/v2/built-with-astro/small.svg"
          alt="Built with Astro"
          width="192"
          height="32"
        />
      </a>
      <a
        href="https://github.com/Trombach/astro-homepage"
        class="flex items-center"
      >
        <GithubLogo class="[&_path]:fill-foreground" />
        <span class="sr-only">Github Repository</span>
      </a>
    </div>
  </div>
</footer>
