---
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const technologyCollection = await getCollection("technologies");
---

<div
  class="grid grid-cols-2 gap-10 p-5 max-sm:gap-10 sm:grid-cols-3 lg:grid-cols-5 lg:gap-20"
>
  {
    technologyCollection
      .sort(
        ({ data: { sortOrder: soa } }, { data: { sortOrder: sob } }) =>
          soa - sob,
      )
      .map(({ data: { name, icon, twClass } }) => (
        <Icon {name} size={128} name={icon} class:list={["mx-auto", twClass]} />
      ))
  }
</div>
