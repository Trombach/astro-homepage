---
/* global ImageMetadata */

import { Image } from "astro:assets";

type Props = { cover: ImageMetadata; coverAlt: string };

const { cover, coverAlt } = Astro.props;
---

<div class="overflow-clip">
  <Image
    src={cover}
    alt={coverAlt}
    width={600}
    loading="eager"
    class="aspect-[21/9] transform overflow-clip rounded-t-xl bg-card object-cover object-center transition-transform group-hover:scale-105"
    transition:name={cover.src}
  />
</div>
