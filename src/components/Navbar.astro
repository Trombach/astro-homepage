---
import { Astronav, MenuIcon, MenuItems } from "astro-navbar";
import Button from "@components/Button.astro";
import NavLink from "./NavLink.astro";
import MenuButton from "./MenuButton.svelte";

const menuItems = [
  {
    title: "About",
    href: "#about",
  },
  {
    title: "Projects",
    href: "#projects",
  },
  {
    title: "Contact",
    href: "#contact",
  },
] as const;
---

<header class="justify-between p-5 lg:flex">
  <Astronav>
    <div class="hidden lg:flex"><Button>Download CV</Button></div>
    <MenuIcon>
      <div class="lg:hidden">
        <MenuButton client:only="svelte" />
      </div>
    </MenuIcon>

    <MenuItems class="hidden animate-[slide] lg:flex lg:items-center">
      <ul
        class="flex animate-[slide] flex-col items-start lg:flex-row lg:gap-10"
      >
        {
          menuItems.map(({ title, href }) => (
            <>
              <li>
                <NavLink {title} {href} />
              </li>
            </>
          ))
        }
      </ul>
    </MenuItems>
  </Astronav>
</header>

<style>
  @keyframes slide {
    100% {
      transform: translateX(0);
    }
  }
</style>
