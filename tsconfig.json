{
  "extends": "astro/tsconfigs/strictest",
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
      "@icons/*": [
        "src/icons/*"
      ]
    },
    "types": [
      "unplugin-icons/types/astro"
    ]
  }
}