{
  "extends": "astro/tsconfigs/strictest",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"]
